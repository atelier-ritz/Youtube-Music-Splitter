# Frontend Environment Variables
# Copy this file to .env and update the values for your environment

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
# URL of the backend service that the frontend will communicate with
# IMPORTANT: Must be accessible from the user's browser

# Local Development:
VITE_BACKEND_URL=http://localhost:3001

# Network Development (cross-device testing):
# VITE_BACKEND_URL=http://192.168.1.100:3001

# Railway Production:
# VITE_BACKEND_URL=https://your-backend-service-name.up.railway.app

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Vite development server port
# VITE_PORT=5173

# Enable hot module replacement
# VITE_HMR=true

# =============================================================================
# AUDIO PLAYER CONFIGURATION
# =============================================================================
# Audio player settings (optional overrides)
# VITE_AUDIO_CROSSFADE_DURATION=100
# VITE_AUDIO_BUFFER_SIZE=4096
# VITE_AUDIO_PRELOAD_TIMEOUT=10000

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# App title and branding
# VITE_APP_TITLE="Band Practice Webapp"
# VITE_APP_DESCRIPTION="AI-powered audio separation for musicians"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
# VITE_ENABLE_BPM_DETECTION=true
# VITE_ENABLE_WAVEFORM_VISUALIZATION=true
# VITE_ENABLE_KEYBOARD_SHORTCUTS=true